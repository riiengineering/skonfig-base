# Prints the line matching $__object_name in --userâ€™s current crontab.
#

name=${__object_name:?}
user=$(cat "${__object:?}/parameter/user")

crontab_list() {
	case $(uname -s)
	in
		(AIX|SunOS)
			crontab -l "${user}" 2>/dev/null ;;
		(*)
			crontab -u "${user}" -l 2>/dev/null ;;
	esac
}

grep_suffix() {
	awk -v suffix="$1" '
	# skip comment lines
	/^[[:blank:]]*#/ { next }

	{
		if (substr($0, length($0) - length(suffix) + 1) == suffix) {
			print
		}
	}'
}

crontab_list | grep_suffix " # ${name}"
