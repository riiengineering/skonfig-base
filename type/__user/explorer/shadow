# Get an existing user's shadow entry.
#

name=${__object_id:?}

os=$(cat "${__explorer:?}/os")
case ${os}
in
	(aix)
		# special AIX stanza format /etc/security/passwd
		printf '%s:%s:::::::\n' \
			"${name}" \
			"$(
				awk -v name="${name}" '
				    /^[^[:blank:]]/ { stanza = $0; sub(/:.*$/, "", stanza); next }
				    name == stanza && /^[[:blank:]]+password *=/ {
				      match($0, /^[^=]*= */)
				      print substr($0, RSTART+RLENGTH)
				      exit
				    }' /etc/security/passwd)"
		exit
		;;
	(freebsd|netbsd)
		database='passwd'
		;;
	(openbsd)
		database='master.passwd'
		;;
	(*)
		# default to using shadow passwords
		database='shadow'
		;;
esac

if command -v getent >/dev/null 2>&1
then
	# shellcheck disable=SC2015
	getent "${database}" "${name}" 2>/dev/null && exit || :  # fallback to file
fi
if test -n "${database}" && test -s "/etc/${database}"
then
	awk -v name="${name}" -F: '$1==name' "/etc/${database}"
fi
