# Prints the number of CPU cores available on the target.
# Note that this number includes virtual SMT threads.
#

os=$("${__explorer:?}/os")
case ${os}
in
    (aix)
		ncpus=$(
			lparstat -i \
			| sed -n -e 's/^Maximum Virtual CPUs[[:blank:]]*:[[:blank:]]*//p')

		# the number of SMT threads is averaged out. Donâ€™t know if different
		# CPUs/sockets can have a different amount of SMT threads.
		smt=$(
			smtctl | awk '
			/^proc[0-9]* has .* SMT threads/ {
				match($0, "[0-9]+ SMT threads")
				smt += int(substr($0, RSTART, RLENGTH))
				ncpus++
			}
			END { print (smt / ncpus) }')

		echo $((ncpus * smt))
        ;;
    (beos)
        sysinfo -cpu | grep -c '^CPU #[0-9][0-9]*'
        ;;
    (haiku)
        nproc
        ;;
    (macosx)
        sysctl -n hw.physicalcpu
        ;;
    (openbsd)
        sysctl -n hw.ncpuonline
        ;;
    (freebsd|netbsd)
        PATH=$(getconf PATH)
        sysctl -n hw.ncpu
        ;;
    (*)
        if test -r /proc/cpuinfo
        then
            cores=$(grep -c -e '^processor[[:blank:]]*:' /proc/cpuinfo)
            test $((cores)) -ge 1 && echo $((cores)) || echo 1
        fi
        ;;
esac
