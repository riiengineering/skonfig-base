# Prints the processor architecture of the target.
#
# Linux:
#  - aarch64
#  - ppc
#  - mips
#  - armv7l

command -v uname >/dev/null 2>&1 || exit 0

case $(uname -s)
in
	(BeOS|Haiku)
		# NOTE: On BeOS/Haiku uname -m will print machine names like BePC,
		#       BeBox, BeMac, etc.
		#       uname -p is more helpful in printing the processor architecture,
		#       but it will print "unknown" many times (esp. original BeOS).
		#       So we need some logic to try to squeeze out something helpful.
		#       Will print nothing if both uname -mp print "unknown".
		proc=$(uname -p)
		case ${proc}
		in
			(unknown)
				proc=$(uname -m)
				# fall back to guessing based on uname -m
				case ${proc}
				in
					(BePC|Intel)
						proc=x86 ;;
					(BeMac|BeBox)
						proc=ppc ;;
					(unknown)
						proc= ;;
				esac
				;;
		esac
		${proc:+echo "${proc}"}
		;;
	(SunOS)
		# On Solaris uname -p prints the processor architecture (e.g. i386)
		# whereas uname -m prints the machine hardware name (e.g. i86pc).
		# According to the uname(1) man page, usage of uname -m by third party
		# programs is discouraged.
		uname -p
		;;
	(*)
		uname -m
		;;
esac
